// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id       Int    @id @default(autoincrement())
  nickname String @unique @db.VarChar(33)
  password String

  @@map("customers")
}

model Product {
  id                   Int     @id @default(autoincrement())
  name                 String
  category             String
  description          String
  image                String
  brand                String
  hasFreeShipping      Boolean
  rating               Int
  minimumQuantity      Int
  kitManagerVariations String
  stock                Int
  price                Float

  @@map("products")
}
